{% extends 'base.html.twig' %}

{% block title %}Season index{% endblock %}

{% block body %}
    <h1>Season index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>NumberEpisode</th>
                <th>Film</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for season in seasons %}
            <tr>
                <td>{{ season.id }}</td>
                <td>{{ season.name }}</td>
                <td>{{ season.numberEpisode }}</td>
                <td>{{ season.movie.title }}</td>
                <td>
                    <a href="{{ path('app_backoffice_season_show', {'id': season.id}) }}">show</a>
                    <a href="{{ path('app_backoffice_season_edit', {'id': season.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_backoffice_season_new') }}">Create new</a>
{% endblock %}
