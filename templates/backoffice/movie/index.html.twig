{% extends 'base_backoffice.html.twig' %}

{% block title %}Movie index{% endblock %}

{% block body %}
    <h1>Movie index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Duration</th>
                <th>Summary</th>
                <th>Synopsys</th>
                <th>Rating</th>
                <th>Country</th>
                <th>Type</th>
                <th>ReleaseDate</th>
                <th>Poster</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for movie in movies %}
            <tr>
                <td>{{ movie.id }}</td>
                <td>{{ movie.title }}</td>
                <td>{{ movie.duration }}</td>
                <td>{{ movie.summary }}</td>
                <td>{{ movie.synopsys }}</td>
                <td>{{ movie.rating }}</td>
                <td>{{ movie.country }}</td>
                <td>{{ movie.type }}</td>
                <td>{{ movie.releaseDate ? movie.releaseDate|date('Y-m-d') : '' }}</td>
                <td>{{ movie.poster }}</td>
                <td>
                    <a href="{{ path('app_backoffice_movie_show', {'id': movie.id}) }}">show</a>
                    <a href="{{ path('app_backoffice_movie_edit', {'id': movie.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_backoffice_movie_new') }}">Create new</a>
{% endblock %}
